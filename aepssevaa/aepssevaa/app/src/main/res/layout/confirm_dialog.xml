<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border4"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img_operator"
            android:src="@drawable/aepsseva_logo_crop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <ImageView
            android:id="@+id/img_close"
            android:src="@drawable/failureicon"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/layout2"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/img_operator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_number"
                android:textSize="16sp"
                android:text="Number  :  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_amount"
                android:textSize="16sp"
                android:text="Amount  :  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_operator"
                android:textSize="16sp"
                android:text="Operator  :  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm_recharge"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Confirm Recharge"
            android:textSize="18sp"
            android:background="@drawable/border11"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>


    </androidx.constraintlayout.widget.ConstraintLayout>