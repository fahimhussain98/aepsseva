<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/NsdlLayout"
        tools:context=".activities.NsdlPanCardActivity"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/insurance_shapeAbleImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/insuranceview5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <ImageView
            android:id="@+id/panBackImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:id="@+id/insurance_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="10dp"
            android:src="@drawable/aepsseva_logo_crop"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/insurance_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/signUp_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/signUp_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/testcolornew"
                            android:paddingVertical="5dp"
                            android:text="PanCard"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_usertitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/userpan_title_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint=" Shri / Mr. /Ms"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true"
                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="First Name"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_first_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/username_first_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Enter First Name"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true"
                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Middle Name"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_middle_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/username_middle_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Enter Middle Name"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true"
                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Last Name"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_last_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/username_last_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Enter Last Name"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true"
                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Gender"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">


                            <Spinner
                                android:id="@+id/spinner_gender"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Mobile No."
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_mobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/panmobile_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Enter Mobile Number"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:singleLine="true"

                                />

                        </com.google.android.material.card.MaterialCardView>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_emailId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">


                            <EditText
                                android:id="@+id/pan_emailId_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:hint="Enter Email Id"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:padding="10dp"
                                android:singleLine="true" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Application Type"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_application_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">


                            <Spinner
                                android:id="@+id/spinner_application_type"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Pan Card Type"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_card_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">


                            <Spinner
                                android:id="@+id/spinner_pancard_type"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:text="Pan Mode"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/pan_mode_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bordered_back"
                            android:elevation="80dp"
                            app:cardElevation="80dp">


                            <Spinner
                                android:id="@+id/spinner_pancard_mode"
                                android:background="@android:color/transparent"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </com.google.android.material.card.MaterialCardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/pan_proceed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="30dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="50dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/panBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/borderbackground2"
                                android:drawableEnd="@drawable/arrow_right_24"
                                android:drawableTint="@color/white"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="NOTE :Kindly confirm all details before doing Submit ."
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>