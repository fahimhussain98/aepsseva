<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddMoneyOnlineActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/addMoneyOnline_shapeAbleImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradientbackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/gradientbackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <ImageView
            android:id="@+id/addMoneyOnlineBackImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addMoneyOnline_img"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="20dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="11dp"
                android:background="@drawable/circle_back"
                android:src="@drawable/aepsseva_logo_crop"
                />
        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/addMoneyOnline_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addMoneyOnline_info_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/addMoneyOnline_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:paddingVertical="5dp"
                            android:text="Add Money"
                            android:textAllCaps="true"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addMoneyOnline_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/border4"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <TextView
                                android:id="@+id/username_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:text="UserName"
                                android:padding="10dp"
                                android:singleLine="true"

                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addMoneyOnline_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/border4"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <TextView
                                android:id="@+id/email_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:text="Email"
                                android:padding="10dp"
                                android:singleLine="true"

                                />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addMoney_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/border4"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <TextView
                                android:id="@+id/mobile_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:text="Mobile"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:singleLine="true"

                                />

                        </com.google.android.material.card.MaterialCardView>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:layout_marginStart="23dp"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addMoneyOnline_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/border4"
                            android:elevation="80dp"
                            app:cardElevation="80dp">

                            <EditText
                                android:id="@+id/addMoneyAmount_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:hint="Enter Amount "
                                android:maxLength="20"
                                android:padding="10dp"
                                android:singleLine="true"
                                />

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/qrCodeCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="15dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="50dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/generateQrCode_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/borderbackground2"
                                android:paddingHorizontal="5dp"
                                android:text="Generate QR Code"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="Note : You will be redirect to new page after Complete  please scan QR code and Pay. it will reflect in your wallet after sometime ."
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            android:paddingBottom="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>