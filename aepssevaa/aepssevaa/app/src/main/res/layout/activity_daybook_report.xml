<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/daybook_report"

        tools:context=".activities.DaybookReportActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:padding="10dp"
                    android:text="Day Book"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/to_from_date_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/from_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="From date"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                            android:drawableTint="@color/black"
                            android:gravity="center"
                            android:paddingEnd="30dp"
                            android:text="Select Date" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/to_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="To date"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                            android:drawableTint="@color/black"
                            android:gravity="center"
                            android:paddingEnd="30dp"
                            android:text="Select date" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_filter"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/borderbackground2"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Filter"
                    android:textColor="@android:color/white"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:text="Recharges"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="SUCCESS"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_success_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D3B900"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="PENDING"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_pending_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#DC0000"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="FAILED"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_failed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_failed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@color/blue"
                    android:padding="10dp"
                    android:text="Fund Transfers"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="OPENING BALANCE"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_opening_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="FUND CREDITED"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_balance_credited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D32E00"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="FUND DEBITED"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_balance_debited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/home_dash_back"
                        android:elevation="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="CLOSING BALANCE"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_closing_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance :"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>