            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="35dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/home_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:padding="3dp"
                        android:background="@drawable/circle_gray_back"
                        android:id="@+id/imgHomeBtm"
                        android:elevation="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/home"
                        app:tint="@color/testcolornew" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="HOME"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wallet_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:id="@+id/imgWalletBtm"
                        android:background="@drawable/circle_gray_back"
                        android:elevation="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wallet_5"
                        app:tint="@color/testcolornew" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="WALLET"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_moneyqrcode_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:id="@+id/imgProfileBtm"
                        android:elevation="8dp"
                        android:padding="10dp"
                        android:background="@drawable/circle"
                        android:layout_gravity="center"
                        android:src="@drawable/moneydark"
                        app:tint="@color/white"
                        />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ADD MONEY"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reports_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">



                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:id="@+id/imgReportBtm"
                        android:background="@drawable/circle_gray_back"
                        android:elevation="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/graph"
                        app:tint="@color/testcolornew" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="REPORTS"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/support_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                    <ImageView
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:id="@+id/imgCallSupport"
                        android:background="@drawable/circle_gray_back"
                        android:elevation="8dp"
                        android:src="@drawable/customersupport"
                        android:layout_gravity="center"
                        app:tint="@color/testcolornew" />


                <TextView
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SUPPORT"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>