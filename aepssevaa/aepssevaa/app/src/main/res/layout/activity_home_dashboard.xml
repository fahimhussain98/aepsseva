    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView

            android:id="@+id/img_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:paddingVertical="12dp"
            android:layout_margin="4dp"
            android:src="@drawable/menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/testcolornew" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dash_logo"
            android:orientation="horizontal"
            android:elevation="100dp"
            app:layout_constraintStart_toEndOf="@+id/img_menu"
            app:layout_constraintEnd_toStartOf="@+id/img_whatsapp"
            app:layout_constraintTop_toTopOf="parent"

            >
            <ImageView

                android:src="@drawable/aepsseva_logo_crop"
                android:elevation="100dp"
                android:layout_width="120dp"
                android:layout_height="70dp"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/whatsapp"
            app:layout_constraintEnd_toStartOf="@+id/img_bell"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageView

            android:id="@+id/img_bell"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:src="@drawable/bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tv_notification_size"
            android:background="@drawable/circle_green"
            app:layout_constraintEnd_toEndOf="@id/img_bell"
            app:layout_constraintTop_toTopOf="@id/img_bell"
            android:textSize="10sp"
            android:gravity="center"
            android:text="0"
            android:padding="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_first"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/dash_logo"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"

                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        app:cardCornerRadius="5dp"
                        android:layout_gravity="center"
                        android:elevation="70dp"
                        android:layout_weight=".50"
                        >
                        <LinearLayout
                            android:id="@+id/layout_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/borderbackground10"
                            android:gravity="center"
                            android:elevation="80dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="3dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="MAIN WALLET"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:background="@color/testcolornew"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/blue">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_bal"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold"
                                android:text="₹ ***.**"
                                android:textSize="20dp"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="2dp"
                        android:gravity="center"
                        app:cardCornerRadius="5dp"
                        tools:visibility="visible"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:layout_weight=".50"
                        >
                        <LinearLayout
                            android:id="@+id/layout_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/borderbackground10"
                            android:elevation="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="AEPS WALLET"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginVertical="3dp"
                                android:textSize="18sp"
                                android:background="@color/testcolornew"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/blue">

                            </View>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_aeps_balance"
                                android:visibility="visible"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:textColor="@color/blue"
                                android:textStyle="bold"
                                android:text="₹ ***.**"
                                android:textSize="20dp"
                                />

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                tools:visibility="gone"
                                android:visibility="gone"
                                android:id="@+id/add_money_top"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:src="@drawable/wallet_5"
                                android:padding="7dp"
                                android:elevation="100dp"
                                app:tint="@color/blue" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bar_container">

            <include
                layout="@layout/dashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />


        </ScrollView>


        <LinearLayout
