<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="30dp"
    android:layout_marginVertical="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/rechargeReportItemLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:background="@drawable/border5"
            android:weightSum="5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_credit_debit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_gray_back"
                android:src="@drawable/img_debit_balance"
                android:layout_weight="0.3"
                android:elevation="20dp"
                android:padding="3dp" />
            <LinearLayout
                android:id="@+id/rechargeReportItemLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@id/rechargeReportItemLayout1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:47 pm"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="2dp"
                    />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13 June 2022"
                    android:textSize="15sp"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_cr_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="fdfsd"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_weight="1.7"
                android:layout_marginHorizontal="3dp"
                android:layout_gravity="center"
                android:background="@drawable/borderbackground2"
                android:gravity="center"
                android:text=" ₹ 99"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_view_more"
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/borderbackground3"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"

                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:tint="@color/white" />


        </LinearLayout>


    </RelativeLayout>

